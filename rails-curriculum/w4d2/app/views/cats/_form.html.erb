<p>
  <label>Name</label>
    <input type="text" name="cat[name]" value="<%= @cat.name %>">
</p>
<p>
  <label>Color</label>
    <select name="cat[color]">
      <% Cat::COLORS.each do |color| %>
        <option value=<%= color %> <%= "selected" if color == @cat.color %>><%= color %></option>
      <% end %>
    </select>
</p>
<p>
  <label>Sex
    <input type="radio" name="cat[sex]" value='M' <%= "checked" if "M" == @cat.sex %>>
    <label>M</label>
    <input type="radio" name="cat[sex]" value='F' <%= "checked" if "F" == @cat.sex %>>
    <label>F</label>
  </label>
</p>
<p>
  <label>Birthday</label>
    <input type="date" name="cat[birth_date]" value="<%= @cat.birth_date %>">
</p>
<p>
  <label>Description</label><br>
  <textarea
    name="cat[description]"
  ><%= @cat.description %></textarea>
</p>
<p>
  <input type="submit" name="Submit">
</p>
